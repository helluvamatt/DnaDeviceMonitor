<Window x:Class="ModMonitor.SetPowerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ModMonitor"
        mc:Ignorable="d"
        Title="Set Power..." SizeToContent="WidthAndHeight" ResizeMode="NoResize" DataContext="{Binding RelativeSource={RelativeSource Self}}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="auto" />
        </Grid.ColumnDefinitions>
        <TextBox Grid.Row="0" Grid.Column="0" Width="130" x:Name="inputField" Margin="3 3 3 3" />
        <Label Grid.Row="0" Grid.Column="1" Margin="0 3 3 3">W</Label>
        <Button Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" HorizontalAlignment="Right" Padding="8 3 8 3" Margin="3 0 3 3" Click="okButton_Click">OK</Button>
    </Grid>
</Window>
